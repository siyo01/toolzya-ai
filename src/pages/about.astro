      <h2 class="text-4xl md:text-5xl font-bold text-[#0D1B2A] mb-4">
        Built for Your Success
      </h2>
    </div>
    <div class="grid md:grid-cols-3 gap-8 md:gap-12">
      <!-- Item 1 -->
      <div class="group animate-fade-in-up">
        <div
          class="relative p-8 rounded-3xl bg-white
           border-2 border-[#1f6f73]/20
           shadow-lg
           transition-all duration-500
           hover:border-[#1f6f73]/60
           hover:shadow-2xl
           hover:-translate-y-2"
        >
          <!-- Icon Container (tetap netral) -->
          <div
            class="w-24 h-24 mx-auto mb-6 rounded-2xl
             bg-[#E0E1DD]
             flex items-center justify-center
             transition-transform duration-500
             group-hover:scale-110"
          >
            <img
              src="/assets/lightbulb-fill.svg"
              class="w-12 h-12 opacity-80"
            />
          </div>

          <h3 class="font-bold text-[#0D1B2A] text-xl mb-3 text-center">
            Idea Starters
          </h3>

          <p class="text-center text-sm md:text-base text-[#415A77]">
            Designed to help you begin, not dictate the final result.
          </p>

          <!-- Accent Dot -->
          <div
            class="absolute top-5 right-5 w-2.5 h-2.5
             bg-[#1f6f73]
             rounded-full
             opacity-0 scale-75
             transition-all duration-500
             group-hover:opacity-100
             group-hover:scale-100"
          >
          </div>
        </div>
      </div>

      <!-- Item 2 -->
      <div class="group animate-fade-in-up-delay-1">
        <div
          class="relative p-8 rounded-3xl bg-white
           border-2 border-[#2a8a8f]/20
           shadow-lg
           transition-all duration-500
           hover:border-[#2a8a8f]/60
           hover:shadow-2xl
           hover:-translate-y-2"
