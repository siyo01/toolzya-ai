  <!-- =========================
     SECTION 6 — LOOKING AHEAD (FINAL COLOR MATCH)
========================== -->
  <section class="py-20 md:py-24 relative">
    <div class="max-w-4xl mx-auto">
      <div class="relative group animate-scale-in">
        <!-- Outer Glow -->
        <div
          class="absolute inset-0
               bg-gradient-to-br from-[#778DA9] via-[#415A77] to-[#1B263B]
               rounded-[3rem] blur-2xl opacity-20
               group-hover:opacity-30 transition-opacity duration-700 overflow-x-hidden"
        >
        </div>

        <!-- Main Card -->
        <div
