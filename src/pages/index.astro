---
import MainLayout from "../layouts/mainlayout.astro";
import Seo from "../components/seo.astro";

const pageTitle = "Toolzya — Free AI Content Generator Tools";
const pageDescription =
  "ToolzyAI provides free AI content generator tools including username, hashtag, caption, bio, and call-to-action generators. Simple, fast, and no login required.";
const canonical = "https://toolzya.com/";
const ogImage = "https://toolzya.com/og/toolzyaicon.png";
---

<MainLayout>
  <!-- Inject SEO into the layout head -->
  <Seo
    slot="head"
    title={pageTitle}
    description={pageDescription}
    canonical={canonical}
    image={ogImage}
    keywords="username generator, hashtag generator, caption generator, bio generator, cta generator, free ai tools"
  />

  <!-- HERO SECTION (V2.1 — clean, premium, simple) -->
  <section class="relative overflow-hidden py-20 md:py-24">
    <div
      class="relative flex flex-col items-center text-center mt-0 md:-mt-16 lg:-mt-22"
    >
      <!-- logo -->
      <img
        src="/assets/toolzyaicon.png"
        alt="Toolzya Logo"
        class="w-full max-w-[240px] sm:max-w-[300px] md:max-w-[360px] lg:max-w-[480px] h-auto opacity-90 mb-6"
      />

      <!-- main title -->
      <h1
        class="text-4xl md:text-5xl font-extrabold tracking-tight text-[#0D1B2A]"
      >
        Smart AI Content Generators
      </h1>

      <!-- short description -->
      <p class="mt-4 text-lg leading-relaxed text-[#415A77]">
        Generate usernames, hashtags, captions, bios, and call-to-action text
        with fast and free AI-powered tools.
      </p>

      <!-- main CTA -->
      <a
        href="#tools"
        class="mt-8 inline-flex items-center justify-center rounded-xl bg-[#1B263B]
             px-8 py-4 text-white text-sm font-semibold
             shadow-[0_10px_30px_rgba(13,27,42,0.4)]
             transition hover:bg-[#0D1B2A] hover:shadow-[0_14px_40px_rgba(13,27,42,0.55)]"
      >
        Use Free Tools
      </a>
    </div>
  </section>

  <!-- WHY CHOOSE — OPTION D (FIXED VERSION) -->
  <section class="mt-20">
    <h2 class="text-xl font-semibold text-[#0D1B2A] mb-12">
      Why choose Toolzya?
    </h2>

    <div class="grid gap-12 md:grid-cols-3">
      <!-- Item 1 -->
      <div class="flex items-start gap-5 max-w-[320px] mx-auto">
        <div
          class="rounded-full bg-[#0D3D42] w-14 h-14 flex items-center justify-center flex-shrink-0"
        >
          <img
            src="/assets/toolzyaicononly.svg"
            class="w-7 h-7 invert opacity-90"
            alt=""
          />
        </div>

        <div class="leading-relaxed">
          <h3 class="font-semibold text-[#0D1B2A] text-lg">Fast Results</h3>
          <p class="text-sm text-[#415A77] mt-1">
            Toolzya is designed to generate short and useful text ideas quickly,
            so you can move forward without slowing down.
          </p>
        </div>
      </div>

      <!-- Item 2 -->
      <div class="flex items-start gap-5 max-w-[320px] mx-auto">
        <div
          class="rounded-full bg-[#0D3D42] w-14 h-14 flex items-center justify-center flex-shrink-0"
        >
          <img
            src="/assets/toolzyaicononly.svg"
            class="w-7 h-7 invert opacity-90"
            alt=""
          />
        </div>

        <div class="leading-relaxed">
          <h3 class="font-semibold text-[#0D1B2A] text-lg">Natural Writing</h3>
          <p class="text-sm text-[#415A77] mt-1">
            The tools help you create readable and practical text suggestions
            that you can adjust as needed.
          </p>
        </div>
      </div>

      <!-- Item 3 -->
      <div class="flex items-start gap-5 max-w-[320px] mx-auto">
        <div
          class="rounded-full bg-[#0D3D42] w-14 h-14 flex items-center justify-center flex-shrink-0"
        >
          <img
            src="/assets/toolzyaicononly.svg"
            class="w-7 h-7 invert opacity-90"
            alt=""
          />
        </div>

        <div class="leading-relaxed">
          <h3 class="font-semibold text-[#0D1B2A] text-lg">Simple & Free</h3>
          <p class="text-sm text-[#415A77] mt-1">
            Toolzya is free to use and simple to navigate, making it easy for
            anyone to try the tools without any barriers.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- TOOLS SECTION -->
  <section id="tools" class="mt-20">
    <div
      class="flex flex-col gap-3 md:flex-row md:items-end md:justify-between"
    >
      <div>
        <h2 class="text-2xl font-bold text-[#0D1B2A]">
          AI Content Generator Tools
        </h2>
      </div>
    </div>

    <div class="mt-8 grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
      <a
        href="/username_generator"
        class="group flex h-full flex-col rounded-2xl bg-white/90 p-6 shadow-sm ring-1 ring-[#E0E1DD] transition hover:-translate-y-1 hover:shadow-[0_14px_40px_rgba(65,90,119,0.25)] hover:ring-[#415A77]/40"
      >
        <div class="flex items-center justify-between gap-2">
          <h3 class="text-lg font-semibold text-[#0D1B2A]">
            AI Username Generator
          </h3>
        </div>
        <p class="mt-2 text-sm text-[#415A77]">
          Generate creative username ideas for social media accounts and online
          platforms.
        </p>
        <span
          class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-[#1B263B]"
        >
          Use Username Generator
          <svg
            class="h-4 w-4 transition-transform group-hover:translate-x-1 group-hover:text-[#0D1B2A]"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 -2 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M5 12h14m-6-6l6 6-6 6"></path>
          </svg>
        </span>
      </a>

      <a
        href="/hashtag_generator"
        class="group flex h-full flex-col rounded-2xl bg-white/90 p-6 shadow-sm ring-1 ring-[#E0E1DD] transition hover:-translate-y-1 hover:shadow-[0_14px_40px_rgba(65,90,119,0.25)] hover:ring-[#415A77]/40"
      >
        <h3 class="text-lg font-semibold text-[#0D1B2A]">
          AI Hashtag Generator
        </h3>
        <p class="mt-2 text-sm text-[#415A77]">
          Create relevant hashtag ideas to help organize and discover social
          media content.
        </p>
        <span
          class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-[#1B263B]"
        >
          Use Hashtag Generator
          <svg
            class="h-4 w-4 transition-transform group-hover:translate-x-1 group-hover:text-[#0D1B2A]"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 -2 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M5 12h14m-6-6l6 6-6 6"></path>
          </svg>
        </span>
      </a>

      <a
        href="/cta_generator"
        class="group flex h-full flex-col rounded-2xl bg-white/90 p-6 shadow-sm ring-1 ring-[#E0E1DD] transition hover:-translate-y-1 hover:shadow-[0_14px_40px_rgba(65,90,119,0.25)] hover:ring-[#415A77]/40"
      >
        <h3 class="text-lg font-semibold text-[#0D1B2A]">AI CTA Generator</h3>
        <p class="mt-2 text-sm text-[#415A77]">
          Generate call-to-action text ideas for ads, websites, and online
          promotions.
        </p>
        <span
          class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-[#1B263B]"
        >
          Use CTA Generator
          <svg
            class="h-4 w-4 transition-transform group-hover:translate-x-1 group-hover:text-[#0D1B2A]"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 -2 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M5 12h14m-6-6l6 6-6 6"></path>
          </svg>
        </span>
      </a>

      <a
        href="/caption_generator"
        class="group flex h-full flex-col rounded-2xl bg-white/90 p-6 shadow-sm ring-1 ring-[#E0E1DD] transition hover:-translate-y-1 hover:shadow-[0_14px_40px_rgba(65,90,119,0.25)] hover:ring-[#415A77]/40"
      >
        <h3 class="text-lg font-semibold text-[#0D1B2A]">
          AI Caption Generator
        </h3>
        <p class="mt-2 text-sm text-[#415A77]">
          Create social media captions for Instagram, TikTok, Facebook, or
          YouTube from any keyword.
        </p>
        <span
          class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-[#1B263B]"
        >
          Create Captions
          <svg
            class="h-4 w-4 transition-transform group-hover:translate-x-1 group-hover:text-[#0D1B2A]"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 -2 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M5 12h14m-6-6l6 6-6 6"></path>
          </svg>
        </span>
      </a>

      <a
        href="/bio_generator"
        class="group flex h-full flex-col rounded-2xl bg-white/90 p-6 shadow-sm ring-1 ring-[#E0E1DD] transition hover:-translate-y-1 hover:shadow-[0_14px_40px_rgba(65,90,119,0.25)] hover:ring-[#415A77]/40"
      >
        <h3 class="text-lg font-semibold text-[#0D1B2A]">AI Bio Generator</h3>
        <p class="mt-2 text-sm text-[#415A77]">
          Write short, catchy profile bios for Instagram, TikTok, Twitter, or
          LinkedIn in seconds.
        </p>
        <span
          class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-[#1B263B]"
        >
          Create Bio
          <svg
            class="h-4 w-4 transition-transform group-hover:translate-x-1 group-hover:text-[#0D1B2A]"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 -2 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M5 12h14m-6-6l6 6-6 6"></path>
          </svg>
        </span>
      </a>
    </div>
  </section>

  <!-- ABOUT SECTION (dark block) -->
  <section
    class="mt-20 rounded-3xl bg-[#0D1B2A] px-6 py-12 text-[#E0E1DD] md:px-10 md:py-14"
  >
    <div class="grid gap-8 md:grid-cols-[minmax(0,2.3fr)_minmax(0,2fr)]">
      <div>
        <h2 class="text-2xl font-semibold">What is Toolzya?</h2>
        <p class="mt-3 text-sm leading-relaxed text-[#E0E1DD]/90">
          Toolzya is a free platform built to help generate simple text ideas
          for everyday content needs.
        </p>
        <ul class="mt-5 space-y-2 text-sm text-[#E0E1DD]/85">
          <li>• No signup, no complex settings.</li>
          <li>• Simple UI designed for students, creators, and marketers.</li>
          <li>
            • Text-based tools focused on speed, simplicity, and usability.
          </li>
        </ul>
      </div>

      <div
        class="flex flex-col justify-between gap-4 rounded-2xl bg-[#1B263B] p-5 text-sm text-[#E0E1DD]/90"
      >
        <div>
          <p class="text-xs uppercase tracking-wide text-[#778DA9]">
            Quick facts
          </p>
          <p class="mt-1 font-semibold text-[#E0E1DD]">
            Built for simple content generation.
          </p>
          <p class="mt-2 text-xs text-[#E0E1DD]/80">
            A collection of free tools to generate short text ideas for digital
            platforms and creative projects.
          </p>
        </div>

        <div class="mt-4 grid grid-cols-2 gap-3 text-center text-xs">
          <div class="rounded-xl bg-[#0D1B2A] px-3 py-3">
            <p class="text-lg font-bold text-white">5+</p>
            <p class="mt-1 text-[11px] text-[#E0E1DD]/80">AI text tools</p>
          </div>
          <div class="rounded-xl bg-[#0D1B2A] px-3 py-3">
            <p class="text-lg font-bold text-white">100%</p>
            <p class="mt-1 text-[11px] text-[#E0E1DD]/80">Free to use</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
