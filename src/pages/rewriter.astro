---
// src/pages/rewriter.astro
import SEO from "../components/seo.astro";
import MainLayout from "../layouts/mainlayout.astro";
import ToolPage from "../components/toolpagetransform.astro";

const pageTitle = "AI Rewriter - Rewrite Sentences Clearly";
const pageDescription =
  "Rewrite sentences and short paragraphs into clearer or alternative versions using Toolzya Rewriter. Ideal for improving clarity, reducing repetition, or exploring different wording styles.";
const pageKeywords =
  "ai rewriter, rewrite text, sentence rewriter, alternate phrasing, text rewrite";
const canonical = "https://toolzya.com/rewriter";

// FAQ JSON-LD for this page (passed into seo.astro via extraLd)
const faqLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "What does the AI Rewriter do?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "It suggests alternative phrasings for sentences and short paragraphs while trying to keep the original meaning.",
      },
    },
    {
      "@type": "Question",
      name: "Does Strong Rewrite change the meaning?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Strong Rewrite may make larger structural changes and could shift meaning slightly; always review the output.",
      },
    },
    {
      "@type": "Question",
      name: "Is this tool free to use?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Yes — Toolzya Rewriter is free with reasonable usage limits to help keep the service stable for everyone.",
      },
    },
    {
      "@type": "Question",
      name: "Can I use rewritten text for academic or professional purposes?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "You can use suggestions as a draft, but you should always verify and edit for accuracy and tone before final use.",
      },
    },
    {
      "@type": "Question",
      name: "Does the rewriter remove plagiarism?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "No automated rewriter can guarantee removal of plagiarism. Use a dedicated plagiarism checker if originality is important.",
      },
    },
    {
      "@type": "Question",
      name: "What text works best with this tool?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Short paragraphs, captions, and general text work best. Very technical or long content may require manual editing after rewriting.",
      },
    },
  ],
};
---

<!-- inject seo metadata + json-ld -->
<SEO
  slot="head"
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  canonical={canonical}
  pageType="SoftwareApplication"
  extraLd={[faqLd]}
/>

<style>
  /* Remove default marker */
  summary::-webkit-details-marker {
    display: none;
  }

  /* Supaya Alpine tidak flicker */
  [x-cloak] {
    display: none !important;
  }

  /* Wrapper setiap FAQ */
  .faq-item {
    padding: 0;
  }

  /* Tombol FAQ (full width) */
  .faq-summary {
    width: 100%;
    padding: 1rem 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    cursor: pointer;
    background: transparent;
    border: none;
    outline: none;
    transition: background 0.25s ease;
  }

  /* Hover seluruh bar */
  .faq-summary:hover {
    background: rgb(173, 202, 206);
  }

  /* Teks pertanyaan */
  .faq-question {
    font-size: 15px;
    font-weight: 500;
    color: #1b263b;
    text-align: left;
  }

  .faq-arrow {
    width: 18px;
    height: 18px;
    stroke: #778da9;
    transition: transform 0.25s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .rotate-180 {
    transform: rotate(180deg);
  }

  /* Wrapper collapse – no padding di sini */
  .faq-body-wrapper {
    overflow: hidden;
  }

  .faq-body {
    padding: 0 1.25rem 1rem 1.25rem;
    font-size: 14px;
    color: #415a77;
    line-height: 1.6;
  }
</style>

<MainLayout title={pageTitle} description={pageDescription}>
  <ToolPage
    title="AI Rewriter"
    description="Rewrite sentences or short paragraphs into clearer or alternative versions."
    buttonLabel="Rewrite Text"
    modes={[
      { label: "Standard Rewrite", value: "standard" },
      { label: "Strong Rewrite", value: "strong" },
    ]}
    modeDescriptions={{
      standard: "Light rewriting with minimal meaning change.",
      strong: "Heavy rewriting to produce a significantly altered version.",
    }}
    placeholder="Paste text to rewrite…"
    resultPlaceholder="Your rewritten text will appear here."
  />

  <!-- SEO CONTENT SECTION (matching paraphraser style) -->
  <section class="max-w-5xl mx-auto mt-20 mb-24 px-6 space-y-14">
    <!-- Intro -->
    <div class="text-center max-w-3xl mx-auto">
      <h2 class="text-3xl font-bold text-[#0D1B2A] mb-3">
        What Is an AI Rewriter?
      </h2>
      <p class="text-[#415A77] leading-relaxed text-[15px]">
        An AI rewriter provides alternative phrasings of your text to improve
        clarity, reduce repetition, or explore different tones. Toolzya Rewriter
        is made for short content where you want new wording quickly. Always
        review outputs before finalizing them.
      </p>
    </div>

    <!-- 3-column benefits (decorative vertical bar) -->
    <div class="grid md:grid-cols-3 gap-8">
      <!-- ITEM 1 -->
      <div class="relative bg-transparent px-4 py-2 md:py-6">
        <div
          aria-hidden="true"
          class="hidden md:block absolute left-6 top-1/2 transform -translate-y-1/2 h-32 w-1 rounded-r-md bg-gradient-to-b from-[#0d3d42] to-[#0d3d42]/70"
        >
        </div>

        <div class="ml-12 md:ml-16">
          <h4 class="text-base font-semibold" style="color:#0d3d42;">
            Reduce repetition
          </h4>
          <p class="mt-2 text-[14px] leading-relaxed text-[#415A77]">
            Replace repeated phrases with varied wording to make text feel
            fresher.
          </p>
        </div>
      </div>

      <!-- ITEM 2 -->
      <div class="relative bg-transparent px-4 py-2 md:py-6">
        <div
          aria-hidden="true"
          class="hidden md:block absolute left-6 top-1/2 transform -translate-y-1/2 h-32 w-1 rounded-r-md bg-gradient-to-b from-[#0d3d42] to-[#0d3d42]/70"
        >
        </div>

        <div class="ml-12 md:ml-16">
          <h4 class="text-base font-semibold" style="color:#0d3d42;">
            Improve clarity
          </h4>
          <p class="mt-2 text-[14px] leading-relaxed text-[#415A77]">
            Make sentences easier to read and understand with alternative
            phrasings.
          </p>
        </div>
      </div>

      <!-- ITEM 3 -->
      <div class="relative bg-transparent px-4 py-2 md:py-6">
        <div
          aria-hidden="true"
          class="hidden md:block absolute left-6 top-1/2 transform -translate-y-1/2 h-32 w-1 rounded-r-md bg-gradient-to-b from-[#0d3d42] to-[#0d3d42]/70"
        >
        </div>

        <div class="ml-12 md:ml-16">
          <h4 class="text-base font-semibold" style="color:#0d3d42;">
            Explore tone & style
          </h4>
          <p class="mt-2 text-[14px] leading-relaxed text-[#415A77]">
            Try different rewriting strengths to see alternative tones or levels
            of change.
          </p>
        </div>
      </div>
    </div>

    <!-- Good use cases vs limitations -->
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Can Do -->
      <div class="bg-white border border-[#E0E4EA] rounded-2xl p-6 shadow-sm">
        <h3 class="text-lg font-semibold text-[#1B263B] mb-4">
          What Toolzya Rewriter can do
        </h3>

        <div class="space-y-4 text-[14px] text-[#415A77] leading-relaxed">
          <div class="flex gap-3 item-start">
            <div
              class="w-7 h-7 shrink-0 bg-[#E8F7FF] rounded-full flex items-center justify-center"
            >
              <!-- Checklist icon -->
              <svg
                class="w-4 h-4 text-[#1B263B]"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M9 12l2 2 4-4"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21 12v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h6"
                ></path>
              </svg>
            </div>
            <p class="leading-tight">
              Rewrite short paragraphs and captions for clarity.
            </p>
          </div>

          <div class="flex gap-3 item-start">
            <div
              class="w-7 h-7 shrink-0 bg-[#E8F7FF] rounded-full flex items-center justify-center"
            >
              <!-- Exchange arrows icon -->
              <svg
                class="w-4 h-4 text-[#1B263B]"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3 10h11M14 10l-3-3m3 3l-3 3"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21 14H10M10 14l3 3M10 14l3-3"></path>
              </svg>
            </div>
            <p class="leading-tight">
              Reduce repetitive wording in lists and paragraphs.
            </p>
          </div>

          <div class="flex gap-3 item-start">
            <div
              class="w-7 h-7 shrink-0 bg-[#E8F7FF] rounded-full flex items-center justify-center"
            >
              <!-- Lightbulb icon -->
              <svg
                class="w-4 h-4 text-[#1B263B]"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M11 3a7 7 0 00-4 12.9V17a1 1 0 001 1h6a1 1 0 001-1v-1.1A7 7 0 0011 3z"
                ></path>
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 21h6"
                ></path>
              </svg>
            </div>
            <p class="leading-tight">
              Generate alternative phrasing to spark new ideas.
            </p>
          </div>
        </div>
      </div>

      <!-- Limitations -->
      <div class="bg-white border border-[#E0E4EA] rounded-2xl p-6 shadow-sm">
        <h3 class="text-lg font-semibold text-[#1B263B] mb-4">
          Things to Keep in Mind
        </h3>

        <div class="space-y-4 text-[14px] text-[#415A77] leading-relaxed">
          <div class="flex gap-3 items-start">
            <div
              class="w-7 h-7 shrink-0 bg-[#EEF0F7] rounded-full flex items-center justify-center"
            >
              <!-- Exclamation triangle -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-4 h-4 text-[#1B263B]"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M10.29 3.86L1.82 18a2 2 0 001.71 3h16.94a2 2 0 001.71-3L13.71 3.86a2 2 0 00-3.42 0z"
                ></path>
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v4"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 17h.01"></path>
              </svg>
            </div>
            <p class="leading-tight">
              Meaning may shift with stronger rewriting; review carefully.
            </p>
          </div>

          <div class="flex gap-3 items-start mt-4">
            <div
              class="w-7 h-7 shrink-0 bg-[#EEF0F7] rounded-full flex items-center justify-center"
            >
              <!-- Magnifying glass -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-4 h-4 text-[#1B263B]"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21 21l-4.35-4.35"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M11 19a8 8 0 100-16 8 8 0 000 16z"></path>
              </svg>
            </div>
            <p class="leading-tight">
              Not a substitute for human editing on sensitive or technical text.
            </p>
          </div>

          <div class="flex gap-3 items-start mt-4">
            <div
              class="w-7 h-7 shrink-0 bg-[#EEF0F7] rounded-full flex items-center justify-center"
            >
              <!-- Scales icon -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-4 h-4 text-[#1B263B]"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3 21h18"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M7 7a4 4 0 118 0"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M7 7v2a3 3 0 01-3 3H4"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M17 7v2a3 3 0 003 3h0"></path>
              </svg>
            </div>
            <p class="leading-tight">
              Always verify originality and suitability before publishing.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- FAQ Section -->
    <div class="mt-16" x-data>
      <h2 class="text-2xl font-bold text-[#0D1B2A] text-center mb-6">
        Frequently Asked Questions
      </h2>

      <div
        class="max-w-3xl mx-auto bg-white/70 backdrop-blur-sm border border-[#E0E4EA] rounded-2xl shadow-sm divide-y divide-[#E0E4EA] overflow-hidden"
      >
        <!-- FAQ ITEM -->
        <div class="faq-item" x-data="{ open: false }">
          <button class="faq-summary" @click="open = !open">
            <span class="faq-question">What does an AI rewriter do?</span>
            <svg
              class="faq-arrow"
              :class="{ 'rotate-180': open }"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-width="2" d="M6 9l6 6 6-6"></path>
            </svg>
          </button>

          <div x-show="open" x-collapse>
            <div class="faq-body">
              An AI rewriter suggests alternative ways to rephrase sentences
              while attempting to keep the same core meaning.
            </div>
          </div>
        </div>

        <!-- FAQ ITEM -->
        <div class="faq-item" x-data="{ open: false }">
          <button class="faq-summary" @click="open = !open">
            <span class="faq-question"
              >Does Strong Rewrite change the meaning?</span
            >
            <svg
              class="faq-arrow"
              :class="{ 'rotate-180': open }"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-width="2" d="M6 9l6 6 6-6"></path>
            </svg>
          </button>

          <div x-show="open" x-collapse>
            <div class="faq-body">
              Strong Rewrite tends to make larger structural changes, so the
              meaning may shift slightly depending on the input.
            </div>
          </div>
        </div>

        <!-- FAQ ITEM -->
        <div class="faq-item" x-data="{ open: false }">
          <button class="faq-summary" @click="open = !open">
            <span class="faq-question">Is this tool free to use?</span>
            <svg
              class="faq-arrow"
              :class="{ 'rotate-180': open }"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-width="2" d="M6 9l6 6 6-6"></path>
            </svg>
          </button>

          <div x-show="open" x-collapse>
            <div class="faq-body">
              Yes, Toolzya Rewriter can be used for free with fair usage limits.
            </div>
          </div>
        </div>

        <!-- FAQ ITEM -->
        <div class="faq-item" x-data="{ open: false }">
          <button class="faq-summary" @click="open = !open">
            <span class="faq-question"
              >Can I use this for academic writing?</span
            >
            <svg
              class="faq-arrow"
              :class="{ 'rotate-180': open }"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-width="2" d="M6 9l6 6 6-6"></path>
            </svg>
          </button>

          <div x-show="open" x-collapse>
            <div class="faq-body">
              You can use the output as a draft, but always review and edit the
              final text to ensure it is accurate and appropriate.
            </div>
          </div>
        </div>

        <!-- FAQ ITEM -->
        <div class="faq-item" x-data="{ open: false }">
          <button class="faq-summary" @click="open = !open">
            <span class="faq-question">Does this tool remove plagiarism?</span>
            <svg
              class="faq-arrow"
              :class="{ 'rotate-180': open }"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-width="2" d="M6 9l6 6 6-6"></path>
            </svg>
          </button>

          <div x-show="open" x-collapse>
            <div class="faq-body">
              No rewriting tool can guarantee plagiarism removal. You should
              always verify originality using a dedicated plagiarism checker.
            </div>
          </div>
        </div>

        <!-- FAQ ITEM -->
        <div class="faq-item" x-data="{ open: false }">
          <button class="faq-summary" @click="open = !open">
            <span class="faq-question">What kind of text works best?</span>
            <svg
              class="faq-arrow"
              :class="{ 'rotate-180': open }"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-width="2" d="M6 9l6 6 6-6"></path>
            </svg>
          </button>

          <div x-show="open" x-collapse>
            <div class="faq-body">
              Short paragraphs, captions, descriptions, and general writing work
              best. Technical or very long content may need additional editing.
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
