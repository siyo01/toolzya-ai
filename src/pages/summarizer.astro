---
// src/pages/summarizer.astro
import SEO from "../components/seo.astro";
import MainLayout from "../layouts/mainlayout.astro";
import ToolPage from "../components/toolpagetransform.astro";

const pageTitle = "AI Summarizer - Shorten Articles & Notes";
const pageDescription =
  "Toolzya Summarizer helps you convert long text into concise summaries that keep the main ideas. Fast, simple, and free to use.";
const pageKeywords =
  "ai summarizer, text summarizer, article summary, summarize text, summary tool";
const canonical = "https://toolzya.com/summarizer";

// WebApplication JSON-LD
const webAppLd = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  name: "AI Summarizer - Toolzya",
  description: pageDescription,
  url: canonical,
  applicationCategory: "AIWritingTool",
};

// FAQ JSON-LD (unique for Summarizer)
const faqLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "What does the Toolzya Summarizer do?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "It condenses longer text into shorter summaries that highlight the main points. Always review the output for important details.",
      },
    },
    {
      "@type": "Question",
      name: "Is the summarizer free to use?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Yes — Toolzya offers a free summarizer with fair usage limits to keep the service stable for everyone.",
      },
    },
    {
      "@type": "Question",
      name: "Will the summarizer keep factual information accurate?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "The tool tries to preserve key facts, but it may omit less-important details. Verify any critical facts before relying on them.",
      },
    },
    {
      "@type": "Question",
      name: "Does Toolzya store my text?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "No — input text is processed transiently and not stored long-term. Avoid pasting sensitive personal or confidential information.",
      },
    },
  ],
};
---

<!-- inject seo metadata + json-ld -->
<SEO
  slot="head"
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  canonical={canonical}
  pageType="SoftwareApplication"
  extraLd={[webAppLd, faqLd]}
/>

<style>
  /* Remove default marker */
  summary::-webkit-details-marker {
    display: none;
  }

  /* Supaya Alpine tidak flicker */
  [x-cloak] {
    display: none !important;
  }

  /* Wrapper setiap FAQ */
  .faq-item {
    padding: 0;
  }

  /* Tombol FAQ (full width) */
  .faq-summary {
    width: 100%;
    padding: 1rem 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    cursor: pointer;
    background: transparent;
    border: none;
    outline: none;
    transition: background 0.25s ease;
  }

  /* Hover seluruh bar */
  .faq-summary:hover {
    background: rgb(173, 202, 206);
  }

  /* Teks pertanyaan */
  .faq-question {
    font-size: 15px;
    font-weight: 500;
    color: #1b263b;
    text-align: left;
  }

  .faq-arrow {
    width: 18px;
    height: 18px;
    stroke: #778da9;
    transition: transform 0.25s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .rotate-180 {
    transform: rotate(180deg);
  }

  /* Wrapper collapse – no padding di sini */
  .faq-body-wrapper {
    overflow: hidden;
  }

  .faq-body {
    padding: 0 1.25rem 1rem 1.25rem;
    font-size: 14px;
    color: #415a77;
    line-height: 1.6;
  }
</style>

<MainLayout title={pageTitle} description={pageDescription}>
  <ToolPage
    title="AI Summarizer"
    description="Create shorter or more detailed versions of your text while preserving the essential ideas."
    buttonLabel="Summarize Text"
    modes={[
      { label: "Short Summary", value: "short" },
      { label: "Detailed Summary", value: "detailed" },
    ]}
    modeDescriptions={{
      short: "Very concise summary capturing main ideas only.",
      detailed: "More complete summary preserving key details.",
    }}
    placeholder="Paste text to summarize…"
    resultPlaceholder="Your summary will appear here."
  />

  <!-- SEO CONTENT SECTION (match style from paraphraser) -->
  <section class="max-w-5xl mx-auto mt-20 mb-24 px-6 space-y-14">
    <!-- Intro -->
    <div class="text-center max-w-3xl mx-auto">
      <h2 class="text-3xl font-bold text-[#0D1B2A] mb-3">
        What Is an AI Summarizer?
      </h2>
      <p class="text-[#415A77] leading-relaxed text-[15px]">
        A summarizer shortens long passages into compact overviews while keeping
        the main points intact. Toolzya Summarizer works best with articles,
        notes, and reports where you need a quick, readable summary. Review the
        output to ensure no critical details were omitted.
      </p>
    </div>

    <!-- 3-column benefits (decorative vertical bar) -->
    <div class="grid md:grid-cols-3 gap-8">
      <!-- ITEM 1 -->
      <div class="relative bg-transparent px-4 py-2 md:py-6">
        <div
          aria-hidden="true"
          class="hidden md:block absolute left-6 top-1/2 transform -translate-y-1/2 h-32 w-1 rounded-r-md bg-gradient-to-b from-[#0d3d42] to-[#0d3d42]/70"
        >
        </div>

        <div class="ml-12 md:ml-16">
          <h4 class="text-base font-semibold" style="color:#0d3d42;">
            Save reading time
          </h4>
          <p class="mt-2 text-[14px] leading-relaxed text-[#415A77]">
            Get a quick overview of long articles or reports so you can grasp
            the main ideas faster.
          </p>
        </div>
      </div>

      <!-- ITEM 2 -->
      <div class="relative bg-transparent px-4 py-2 md:py-6">
        <div
          aria-hidden="true"
          class="hidden md:block absolute left-6 top-1/2 transform -translate-y-1/2 h-32 w-1 rounded-r-md bg-gradient-to-b from-[#0d3d42] to-[#0d3d42]/70"
        >
        </div>

        <div class="ml-12 md:ml-16">
          <h4 class="text-base font-semibold" style="color:#0d3d42;">
            Flexible length
          </h4>
          <p class="mt-2 text-[14px] leading-relaxed text-[#415A77]">
            Choose short or more detailed summaries depending on how much
            context you need.
          </p>
        </div>
      </div>

      <!-- ITEM 3 -->
      <div class="relative bg-transparent px-4 py-2 md:py-6">
        <div
          aria-hidden="true"
          class="hidden md:block absolute left-6 top-1/2 transform -translate-y-1/2 h-32 w-1 rounded-r-md bg-gradient-to-b from-[#0d3d42] to-[#0d3d42]/70"
        >
        </div>

        <div class="ml-12 md:ml-16">
          <h4 class="text-base font-semibold" style="color:#0d3d42;">
            Study & research helper
          </h4>
          <p class="mt-2 text-[14px] leading-relaxed text-[#415A77]">
            Use summaries to review notes, extract key points for study, or
            prepare quick briefings.
          </p>
        </div>
      </div>
    </div>

    <!-- Good use cases vs limitations -->
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Can Do -->
      <div class="bg-white border border-[#E0E4EA] rounded-2xl p-6 shadow-sm">
        <h3 class="text-lg font-semibold text-[#1B263B] mb-4">
          What Toolzya Summarizer can do
        </h3>

        <div class="space-y-4 text-[14px] text-[#415A77] leading-relaxed">
          <div class="flex gap-3 item-start">
            <div
              class="w-7 h-7 shrink-0 bg-[#E8F7FF] rounded-full flex items-center justify-center"
            >
              <!-- Icon: document + lines (summary symbol) -->
              <svg
                class="w-4 h-4 text-[#1B263B]"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path
                  d="M8 2h6l4 4v14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2z"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
                <path
                  d="M12 8h4M12 12h6M12 16h6"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </div>
            <p class="leading-tight">
              Condensing articles, blog posts, and notes into short overviews.
            </p>
          </div>

          <div class="flex gap-3 item-start">
            <div
              class="w-7 h-7 shrink-0 bg-[#E8F7FF] rounded-full flex items-center justify-center"
            >
              <!-- Icon: stacked cards (different detail levels) -->
              <svg
                class="w-4 h-4 text-[#1B263B]"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <rect
                  x="3"
                  y="4"
                  width="14"
                  height="6"
                  rx="1"
                  stroke-linecap="round"
                  stroke-linejoin="round"></rect>
                <rect
                  x="7"
                  y="10"
                  width="14"
                  height="6"
                  rx="1"
                  stroke-linecap="round"
                  stroke-linejoin="round"></rect>
                <rect
                  x="11"
                  y="16"
                  width="10"
                  height="6"
                  rx="1"
                  stroke-linecap="round"
                  stroke-linejoin="round"></rect>
              </svg>
            </div>
            <p class="leading-tight">
              Adjusting level of detail with short or detailed modes.
            </p>
          </div>

          <div class="flex gap-3 item-start">
            <div
              class="w-7 h-7 shrink-0 bg-[#E8F7FF] rounded-full flex items-center justify-center"
            >
              <!-- Icon: bookmark/star (study helper) -->
              <svg
                class="w-4 h-4 text-[#1B263B]"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path
                  d="M5 3v18l7-4 7 4V3H5z"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
                <path d="M12 8v6" stroke-linecap="round" stroke-linejoin="round"
                ></path>
              </svg>
            </div>
            <p class="leading-tight">
              Helping students and readers find essentials faster.
            </p>
          </div>
        </div>
      </div>

      <!-- Limitations -->
      <div class="bg-white border border-[#E0E4EA] rounded-2xl p-6 shadow-sm">
        <h3 class="text-lg font-semibold text-[#1B263B] mb-4">
          Things to Keep in Mind
        </h3>

        <div class="space-y-4 text-[14px] text-[#415A77] leading-relaxed">
          <div class="flex gap-3 items-start">
            <div
              class="w-7 h-7 shrink-0 bg-[#EEF0F7] rounded-full flex items-center justify-center"
            >
              <!-- Icon: caution triangle (watch for omissions) -->
              <svg
                class="w-4 h-4 text-[#1B263B]"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path
                  d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
                <path d="M12 9v4" stroke-linecap="round" stroke-linejoin="round"
                ></path>
                <path
                  d="M12 17h.01"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </div>
            <p class="leading-tight">
              Summaries can omit less-important details. Verify any critical
              facts separately.
            </p>
          </div>

          <div class="flex gap-3 items-start mt-4">
            <div
              class="w-7 h-7 shrink-0 bg-[#EEF0F7] rounded-full flex items-center justify-center"
            >
              <!-- Icon: puzzle piece (ambiguous/complex content) -->
              <svg
                class="w-4 h-4 text-[#1B263B]"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path
                  d="M9 2v2a2 2 0 0 1-2 2H5v4h4v-1a2 2 0 0 1 2-2h2"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
                <path
                  d="M15 22v-2a2 2 0 0 1 2-2h2v-4h-4v1a2 2 0 0 1-2 2h-2"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
                <path
                  d="M12 12l0 0"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </div>
            <p class="leading-tight">
              Very technical or ambiguous text may need manual editing after
              summarizing.
            </p>
          </div>

          <div class="flex gap-3 items-start mt-4">
            <div
              class="w-7 h-7 shrink-0 bg-[#EEF0F7] rounded-full flex items-center justify-center"
            >
              <!-- Icon: clipboard + check (verify before action) -->
              <svg
                class="w-4 h-4 text-[#1B263B]"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <rect
                  x="9"
                  y="2"
                  width="6"
                  height="4"
                  rx="1"
                  stroke-linecap="round"
                  stroke-linejoin="round"></rect>
                <path
                  d="M9 7H7a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-2"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
                <path
                  d="M9 13l2 2 4-4"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </div>
            <p class="leading-tight">
              Do not use the output as a sole source for critical decisions;
              always cross-check important information.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- FAQ Section -->
    <div class="mt-16" x-data>
      <h2 class="text-2xl font-bold text-[#0D1B2A] text-center mb-6">
        Frequently Asked Questions (FAQ)
      </h2>

      <div
        class="max-w-3xl mx-auto bg-white/70 backdrop-blur-sm border border-[#E0E4EA] rounded-2xl shadow-sm divide-y divide-[#E0E4EA] overflow-hidden"
      >
        <!-- FAQ ITEM 1 -->
        <div class="faq-item" x-data="{ open: false }">
          <button class="faq-summary" @click="open = !open">
            <span class="faq-question">How long can the input be?</span>
            <svg
              class="faq-arrow"
              :class="{ 'rotate-180': open }"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-width="2" d="M6 9l6 6 6-6"></path>
            </svg>
          </button>
          <div x-show="open" x-collapse>
            <div class="faq-body">
              The summarizer works best with short-to-medium articles. For very
              long documents, split them into sections and summarize each part.
            </div>
          </div>
        </div>

        <!-- FAQ ITEM 2 -->
        <div class="faq-item" x-data="{ open: false }">
          <button class="faq-summary" @click="open = !open">
            <span class="faq-question">Can I choose summary length?</span>
            <svg
              class="faq-arrow"
              :class="{ 'rotate-180': open }"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-width="2" d="M6 9l6 6 6-6"></path>
            </svg>
          </button>
          <div x-show="open" x-collapse>
            <div class="faq-body">
              Yes. use the Short or Detailed mode to control how condensed the
              result should be. Always review to match the level of detail you
              need.
            </div>
          </div>
        </div>

        <!-- FAQ ITEM 3 -->
        <div class="faq-item" x-data="{ open: false }">
          <button class="faq-summary" @click="open = !open">
            <span class="faq-question"
              >Is the summarizer suitable for academic use?</span
            >
            <svg
              class="faq-arrow"
              :class="{ 'rotate-180': open }"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-width="2" d="M6 9l6 6 6-6"></path>
            </svg>
          </button>
          <div x-show="open" x-collapse>
            <div class="faq-body">
              It can help create quick overviews for study, but do not rely
              solely on it for citations or final submissions. Verify and expand
              summaries when needed.
            </div>
          </div>
        </div>

        <!-- FAQ ITEM 4 -->
        <div class="faq-item" x-data="{ open: false }">
          <button class="faq-summary" @click="open = !open">
            <span class="faq-question">Is it free and private?</span>
            <svg
              class="faq-arrow"
              :class="{ 'rotate-180': open }"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-width="2" d="M6 9l6 6 6-6"></path>
            </svg>
          </button>
          <div x-show="open" x-collapse>
            <div class="faq-body">
              Toolzya offers the summarizer for free with reasonable usage
              limits. Toolzya does not store user inputs after they are
              processed. But, we recommend not pasting sensitive personal or
              confidential information.
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
